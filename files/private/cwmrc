borderwidth 2 
snapdist 6
color activeborder steelblue
color inactiveborder black
color urgencyborder red
gap 0 0 0 0
#sticky yes

autogroup 1 "Claws-mail"
autogroup 2 "XTerm"
autogroup 3 "chromium-browser"
autogroup 4 "Vlc"
autogroup 5 "Geany"

command xterm xterm
command jail-term "jail xterm"
command Chromium "jail chrome"
command Claws "jail claws-mail"
command VLC "jail vlc"
command Geany geany
command Thunar thunar
command Filezilla "jail filezilla"
command Gimp "jail gimp"
command LibreOffice "jail soffice"
command xlock xlock
command xkill xkill

mousebind M-1 window_move
mousebind M-2 unmap
mousebind M-3 window_resize
mousebind M-4 rcyclegroup
mousebind M-5 cyclegroup
