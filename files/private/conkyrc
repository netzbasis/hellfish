# Conkyrc

background yes
xftfont Terminus:size=8
xftalpha 0.8
update_interval 3.0
total_run_times 0
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 300 5
maximum_width 300
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_color white
default_shade_color black
alignment top_left
gap_x 1040
gap_y 30
no_buffers yes

TEXT
${exec whoami}@$nodename  $uptime${alignr}$kernel-$machine
$stippled_hr

CPU ${alignc}    ${cpu}% @ ${freq_g (1)}GHz ${alignr}${exec sysctl -n hw.sensors.acpitz0.temp0 | cut -c 1-2}°C
${cpugraph cpu0}
${cpugraph cpu1}
${cpugraph cpu2}
${cpugraph cpu3}

LOAD $alignr $loadavg ($running_processes / $processes)

RAM $alignr $mem/$memmax
${membar 3}

TOP 3 $alignr PID   CPU%   MEM%
 ${top name 1} $alignr ${top pid 1} ${top cpu 1} ${top mem 1}
 ${top name 2} $alignr ${top pid 2} ${top cpu 2} ${top mem 2}
 ${top name 3} $alignr ${top pid 3} ${top cpu 3} ${top mem 3}
$stippled_hr

DISK
 write $alignr $diskio_write
${diskiograph_write}
 read $alignr $diskio_read
${diskiograph_read}

NET
 down $alignr ${downspeed em0} - ${totaldown em0}
${downspeedgraph em0 20}
 up $alignr ${upspeed em0} - ${totalup em0}
${upspeedgraph em0 20}

${time %b %d} $alignr ${time %k:%M:%S}
